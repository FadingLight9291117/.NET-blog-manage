@{
    Layout = "~/Views/Shared/Base_Layout.cshtml";
}


@model IEnumerable<WebApplication3.EF.blog_Table>

<script>
    function read(id) {
        $.ajax({
            type: "get",
            url: "/Home/Read?id=" + id,
            data: null,
            dataType: null,
            success: function () {
                window.location.href = "/Home/Read?id=" + id;
            }
        });
    }
</script>

<script>
    function read(id) {
        $.ajax({
            type: "get",
            url: "/Home/Read?id=" + id,
            data: null,
            dataType: null,
            success: function () {
