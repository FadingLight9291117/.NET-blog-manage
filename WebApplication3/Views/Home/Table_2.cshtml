            }
        });
    }
</script>


<ul class="sidenews">
    <h2>站长推荐</h2>
    @{ 
        int i = 0;
    }
    @foreach (var item in Model)
    {
        <li>
            <i><img src="@item.Image"></i>
            <p><a href="javascript:void(0)" onclick="read(@item.BlogID)">@item.Title</a></p>
            <span>@item.DateTime</span>
        </li>
        if (++i == 5)
        {
            break;
        }
    }

</ul>
