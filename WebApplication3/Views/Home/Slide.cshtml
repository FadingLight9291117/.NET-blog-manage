@{
    Layout = "~/Views/Shared/Base_Layout.cshtml";
}


@model IEnumerable<WebApplication3.EF.blog_Table>



<div class="banner">
    <div id="banner" class="fader">
        <ul>
            @{ 
                int i = 0;
            }
            @foreach (var item in Model)
            {
                <li class="slide"><a href="javascript:void(0)" onclick="read(@item.BlogID)"><img src="@item.Image"><span class="imginfo">@item.Title</span></a></li>
                if (++i == 3)
                {
                    break;
                }
            }
        </ul>
        <div class="fader_controls">
            <div class="page prev" data-target="prev">&lsaquo;</div>
            <div class="page next" data-target="next">&rsaquo;</div>
            <ul class="pager_list"></ul>
        </div>
    </div>
</div>
